<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="main.client.CalendarController">
    <!-- Month Navigation -->
    <top>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="previousMonthButton" text="&lt;" />
            <Label fx:id="monthLabel" text="January" />
            <Button fx:id="nextMonthButton" text="&gt;" />
        </HBox>
    </top>

    <!-- Calendar Grid -->
    <center>
        <GridPane fx:id="calendarGrid" alignment="CENTER" hgap="10" vgap="10">
        </GridPane>
    </center>
</BorderPane>
